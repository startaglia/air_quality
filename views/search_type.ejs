<!DOCTYPE html>
<html lang="en">
<%- include("./partials/header.ejs") %>
<body class="d-flex flex-column justify-content-between align-content-center vh-100">
    <div class="usage-box d-flex justify-content-center">
        <div class="card w-50 p-3 ">
            <div class="card-body d-flex flex-column justify-content-center align-items-center text-center">
                <% if (locals.content) { %>
                    <h1> Write <%= content %> </h1>
                    <form action="/search_type" method="POST" class="mt-3">
                        <input type="text" class="form-control" name="searchTerm">
                        <input type="hidden" class="form-control" name="searchType" value="<%= content %>">
                        <button class="btn btn-outline-secondary mt-3" type="submit">Search</button>
                    </form>
                    <% switch (content) {
                        case "name":
                            for (let i = 0; i < names.length; i++) { %>
                                <%= names[i] %><br>
                            <% } %>
                            <% break;
                        case "capital":
                            for (let i = 0; i < capitals.length; i++) { %>
                                <%= capitals[i] %><br>
                            <% } %>
                            <% break;
                        case "language":
                            for (let i = 0; i < languages.length; i++) { %>
                                <%= languages[i] %><br>
                            <% } %>
                            <% break;
                        case "region":
                            for (let i = 0; i < regions.length; i++) { %>
                                <%= regions[i] %><br>
                            <% } %>
                            <% break;
                        case "subregion":
                            for (let i = 0; i < subregions.length; i++) { %>
                                <%= subregions[i] %><br>
                            <% } %>
                            <% break;
                    } %>
                <% } %>
            </div>
        </div>
    </div>
    <footer>
        <%- include("./partials/footer.ejs") %>
    </footer>
</body>
</html>

